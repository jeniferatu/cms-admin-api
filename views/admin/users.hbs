{{>admin/header}}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Manage Admin
            <small>manage daftar admin</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="/admin">
                    <i class="fa fa-dashboard"></i>Home</a>
            </li>
            <li class="active">Users</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="container-fluid half-padding">
            <div class="template template__blank">
                <div class="row">

                    <!-- flash message -->
                    

                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Filter Data</h3>
                            </div>
                            <!-- form start -->
                            <form method="get" action="/users" class="form-horizontal">
                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <label for="exampleInputEmail1">Name</label>
                                            <input type="text" name="query" value="" class="form-control" />
                                        </div>                                        
                                    </div>
                                </div>
                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-search"></i> Cari</button>
                                    &nbsp;&nbsp;
                                    <a class="btn btn-primary" href="/users">
                                        <i class="fa fa-time"></i> Clear Filter
                                    </a>
                                    &nbsp;&nbsp;
                                    <a class="btn btn-primary" href="/users/addUser">
                                        <i class="fa fa-plus"></i> Tambah User
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="box">
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <p style="font-weight: bold;text-decoration: underline; padding-top: 5px; padding-left: 10px;">Total Data :
                                {{rows.length}}
                            </p>
                            <tr>
                                <th class="text-center" width="130">ACTION</th>
                                <th class="text-center">NAMA</th>
                                <th class="text-center">EMAIL</th>
                                <th class="text-center">LEVEL</th>
                                <th class="text-center">STATUS</th>
                            </tr>
                            {{#each rows}}
                            <tr>
                                <td width="130">
                                    <a href="/detailedUsers/{{user_id}}">
                                        <button class="btn btn-block btn-default btn-sm">
                                            <i class="fa fa-eye"></i> View Detail
                                        </button>
                                    </a>
                                </td>
                                <td class="text-center">
                                    {{name}}
                                </td>
                                <td class="text-center">
                                    {{email}}
                                </td>
                                <td class="text-center">
                                    {{#if level}}
                                        Admin
                                    {{else}}
                                        Super Admin
                                    {{/if}}
                                </td>
                                <td class="text-center">
                                    {{#if status}}
                                        Aktif
                                    {{else}}
                                        Tidak Aktif
                                    {{/if}}
                                </td>
                            </tr>
                            {{/each}}
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
{{>admin/footer}}